generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DB_URL")
}

model Comment {
  id         Int      @id @default(autoincrement())
  name       String
  relation   String?
  message    String   @db.VarChar(500)
  createdAt  DateTime @default(now())
}